<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_app_title"
        android:layout_width="@dimen/app_logo_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="Harry Potter Trivia"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_start_quiz"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/textView_app_title"
        android:layout_centerHorizontal="true"
        android:background="@color/yellow"
        android:text="Start quiz" />

    <Button
        android:id="@+id/button_shout_outs"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_start_quiz"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@color/olive"
        android:enabled="false"
        android:text="Shout outs" />

</RelativeLayout>