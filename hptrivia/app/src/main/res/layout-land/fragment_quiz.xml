<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/gold"
    tools:context="com.titan.hptrivia.activity.QuizActivity$QuizFragment">

    <TextView
        android:id="@+id/textView_questionInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="question info question info question info"
        android:textSize="17dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView_questionText"
        android:layout_below="@id/textView_questionInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="sample question text sample question text sample question text sample question text sample question text"
        android:textSize="22dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <LinearLayout
        android:id="@+id/linLayout_top_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_questionText"
        android:weightSum="1.0"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_answer1"
            android:text="answer 1"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@color/gray"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/button_answer2"
            android:text="answer 2"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@color/gray"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linLayout_bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linLayout_top_buttons"
        android:weightSum="1.0"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_answer3"
            android:text="answer 3"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@color/gray"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/button_answer4"
            android:text="answer 4"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@color/gray"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="50dp" />
    </LinearLayout>

</RelativeLayout>
