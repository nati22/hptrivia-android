<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/gold"
    tools:context="com.titan.hptrivia.activity.QuizActivity$QuizFragment"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:id="@+id/linLayout_questionInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_questionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBar"
            android:text="question info question info question info"
            android:textSize="17dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView_questionText"
            android:layout_below="@id/textView_questionInfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="sample question text sample question text sample question text sample question text sample question text"
            android:textSize="22dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linLayout_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:layout_marginBottom="0dp"
        android:background="@color/red"
        android:orientation="vertical">
    
        <Button
            android:id="@+id/button_answer1"
            android:layout_below="@id/textView_questionText"
            android:layout_centerHorizontal="true"
            android:text="answer 1"
            android:layout_margin="4dp"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/button_answer2"
            android:layout_below="@id/button_answer1"
            android:layout_centerHorizontal="true"
            android:text="answer 2"
            android:layout_margin="4dp"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/button_answer3"
            android:layout_below="@id/button_answer2"
            android:layout_centerHorizontal="true"
            android:text="answer 3"
            android:layout_margin="4dp"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/button_answer4"
            android:layout_below="@id/button_answer3"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:text="answer 4"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>

</LinearLayout>
