        android:id="@+id/textView_yourAnsLabel"
        android:layout_below="@id/textView_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="@string/your_answer"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView_yourAnsText"
        android:layout_toRightOf="@id/textView_yourAnsLabel"
        android:layout_alignTop="@id/textView_yourAnsLabel"
        android:layout_marginLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
